<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="@drawable/userprofileback"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:id="@+id/userpicture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="140dp"
            android:layout_marginTop="46dp"
            android:layout_marginEnd="140dp"
            android:layout_marginBottom="94dp"

            app:srcCompat="@drawable/userpicforprofile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="83dp"
            android:layout_marginEnd="83dp"
            android:layout_marginBottom="46dp"
            android:fontFamily="@font/prompt_bold"
            android:text="CHIRAG K SHETTY"
            android:lines="1"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/phoneprofilepic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/phoneforprofile"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.121"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        app:layout_constraintVertical_bias="0.487" />

    <ImageView
        android:id="@+id/emailprofilepic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/emailforprofile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneprofilepic" />

    <ImageView
        android:id="@+id/calenderprofilepic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/dateofbirthprofile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailprofilepic" />

    <ImageView
        android:id="@+id/adressprofilepic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/adressforprofile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calenderprofilepic" />

    <TextView
        android:id="@+id/phoneprofiletext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/prompt_bold"
        android:text="9611540243"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/phoneprofilepic"
        app:layout_constraintStart_toEndOf="@+id/phoneprofilepic"
        android:paddingLeft="15dp"
        />

    <TextView
        android:id="@+id/dobforprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/prompt_bold"
        android:paddingLeft="15dp"
        android:text="04 10 2001"
        android:textSize="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/calenderprofilepic"
        app:layout_constraintStart_toEndOf="@+id/calenderprofilepic" />

    <TextView
        android:id="@+id/emailprofiletext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/prompt_bold"
        android:paddingLeft="15dp"
        android:text="chiragkshetty@gmail.com"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/emailprofilepic"
        app:layout_constraintStart_toEndOf="@+id/calenderprofilepic" />

    <TextView
        android:id="@+id/adressprofiletext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/prompt_bold"
        android:paddingLeft="15dp"
        android:layout_marginStart="20dp"
        android:text="Karnatka, India"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/adressprofilepic"
        app:layout_constraintStart_toEndOf="@+id/adressprofilepic" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_margin="15dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        >

        <ImageView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@drawable/profilegrad"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/prompt_bold"
            android:lines="1"
            android:gravity="center"
            android:text="PSYCHOLOGY"
            android:textColor="#9E0855"
            android:textSize="25dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_margin="15dp"
        android:layout_marginTop="4dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        >
        <ImageView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@drawable/profilegradtwo"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/prompt_bold"
            android:lines="1"
            android:gravity="center"
            android:text="SPORTS"
            android:textColor="#370568"
            android:textSize="25dp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="164dp"
        android:fontFamily="@font/prompt_black"
        android:text="ACCOUNT INFO"
        android:textColor="@color/whitesmoke"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="@+id/phoneprofilepic"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <RelativeLayout
            android:id="@+id/newstab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:background="@color/dark_pastel_blue"
            android:gravity="center">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/newsforbottombar" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/booktab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:background="@color/teal_700"
            android:gravity="center">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/bookforbottombar" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profiletab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:background="@color/blue_magenta__violet"
            android:gravity="center">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/profileforbottombar" />
        </RelativeLayout>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>